<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/learn_previous"
                android:layout_width="45dp"
                android:layout_height="352dp"
                android:layout_weight="2"
                app:srcCompat="@mipmap/back_icon_foreground" />

            <ImageView
                android:id="@+id/learn_image"
                android:layout_width="326dp"
                android:layout_height="341dp"
                android:layout_weight="2"
                app:srcCompat="@mipmap/ic_letter_b"
                tools:srcCompat="@mipmap/ic_letter_b_foreground" />

            <ImageButton
                android:id="@+id/learn_next"
                android:layout_width="45dp"
                android:layout_height="345dp"
                android:layout_weight="2"
                app:srcCompat="@mipmap/next" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/learn_fingerspell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="fingerspell" />

            <Button
                android:id="@+id/learn_attempt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="attempt" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>