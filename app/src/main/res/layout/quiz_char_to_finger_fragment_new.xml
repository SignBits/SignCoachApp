<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="left"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/quiz_btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"

            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Button"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:gravity="center_horizontal"
                android:text="" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:backgroundTint="#967BDEF1"
                android:text="Character to Fingerspell Quiz" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10sp"
        android:layout_weight="1.5"
        app:cardBackgroundColor="#DDDDDD"
        app:cardCornerRadius="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25sp">

            <TextView
                android:id="@+id/quiz_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accuracy 80%"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quiz_complete"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="0 of 26 tasks are completed"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/quiz_image"
        android:layout_width="196dp"
        android:layout_height="224dp"
        android:layout_weight="1.5"
        app:srcCompat="@mipmap/ic_char_k" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />


    </LinearLayout>

</LinearLayout>